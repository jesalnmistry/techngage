<!DOCTYPE html>
<% content_for :body_class, "big-background" %>
<div class="headers">
	<span class="schedule-header">
		Waste pick up schedule for - June 2016
	</span>
</div>
<div class="schedule-body">
	<div class="schedule-legend">
		<div class="col-md-3">
			<div class="row">
			<div class="col-xs-12">
				<div class="table-responsive">
					<table class="table table-bordered">
						<thead class="typesofwaste-thread">
							<tr>
								<th>Type of Waste</th>
								<th>Logo</th>
							</tr>
						</thead>
						<tbody class="typesofwaste-tbody">
							<tr class="typesofwaste-dry">
								<td>Dry Waste</td>
								<td><%= image_tag("dry_waste", style: "height: 50px; width: 50px") %></td>
							</tr>
							<tr class="typesofwaste-wet">
								<td>Wet Waste</td>
								<td><%= image_tag("wet_waste", style: "height: 50px; width: 50px") %></td>
							</tr>
							<tr class="typesofwaste-garden">
								<td>Garden Waste</td>
								<td><%= image_tag("garden_waste", style: "height: 50px; width: 50px") %></td>
							</tr>
							<tr class="typesofwaste-e">
								<td>E - Waste</td>
								<td><%= image_tag("e_waste", style: "height: 50px; width: 50px") %></td>
							</tr>
							<tr class="typesofwaste-hazardous">
								<td>Hazardous Waste</td>
								<td><%= image_tag("hazardous_waste", style: "height: 50px; width: 50px") %></td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
			</div>
			<div class="info-type-of-waste">
				To know more about each waste type
				<%= link_to "click here", types_of_waste_path, {:style=>'color:#FFFFFF;', :class => "css_class"} %>
			</div>
		</div>
	</div>
	<div class="schedule-calendar">
		<%= image_tag("june_calendar.png", style: "height: 475px; width: 750px") %>
	</div>
</div>